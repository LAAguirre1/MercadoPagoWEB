@model IEnumerable<MercadoPagoWEB.Models.ActividadViewModel>

@{
    ViewBag.Title = "Actividad Reciente";
}

<div class="container mt-4">
    <div class="row">
        @* Usamos el mismo layout centrado del formulario de transferencia *@
        <div class="col-lg-8 offset-lg-2">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">@ViewBag.Title</h2>
                <a href="@Url.Action("Index", "Billetera")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver a Mi Billetera
                </a>
            </div>

            @* Aquí es donde se muestra la actividad *@
            <div class="card shadow-sm border-0" style="border-radius: 1rem;">
                <div class="card-body">

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <p class="mb-0">Aún no tienes movimientos en tu cuenta.</p>
                        </div>
                    }
                    else
                    {
                        @* Usamos un List Group de Bootstrap para mostrar la actividad *@
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <div class="d-flex align-items-center">
                                        @* Columna del Ícono *@
                                        <div class="me-3 fs-4">
                                            <i class="@item.IconoCss"></i>
                                        </div>

                                        @* Columna de Descripción y Fecha *@
                                        <div>
                                            <h6 class="mb-0 fw-bold">
                                                @item.TipoTransaccion
                                            </h6>
                                            <small class="text-muted">
                                                @item.Descripcion
                                            </small>
                                            <br />
                                            <small class="text-muted">
                                                @item.FechaHora.ToString("dd/MM/yyyy HH:mm") hs
                                            </small>
                                        </div>
                                    </div>

                                    @* Columna del Monto *@
                                    <div class_="@item.ClaseCssMonto fw-bold fs-5">
                                        @* Si es ingreso, muestra un "+". El negativo ya viene en el monto. *@
                                        @(item.EsIngreso ? "+" : "")@item.MontoAfectado.ToString("N2")
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>