@model MercadoPagoWEB.Models.BilleteraViewModel

@{
    ViewBag.Title = "MiBilletera";
}

@* NUEVO:
    Añadimos un fondo gris claro (bg-light) a todo el contenedor
    y un padding (p-4) y bordes redondeados (rounded) para un look de "app".
*@
<div class="container mt-3 bg-light p-4 rounded shadow-sm">

    <div class="d-flex justify-content-between align-items-center">
        <h2>Hola, @Model.NombreCompleto</h2>
        <span class="badge @(Model.EstadoKYC == "Verificado" ? "bg-success" : "bg-warning") p-2">
            @(Model.EstadoKYC == "Verificado" ? "✅ Cuenta Verificada" : "⚠️ Verificación Pendiente")
        </span>
    </div>
    <hr />

    @* --- Mostar mensajes de Éxito/Error --- *@
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @* Sección 1 *@
    <div class="row">
        <div class="col-md-6 mb-4">
            @* CAMBIO:
                Cambiamos 'bg-primary' por 'bg-dark' para un estilo más sobrio y moderno
                como el que pediste (gris oscuro).
            *@
            <div class="card bg-dark text-white shadow-lg border-0" style="border-radius: 1rem;">
                <div class="card-body">
                    <h5 class="card-title opacity-75">Saldo Disponible</h5>
                    <h1 class="card-text fw-bold">$ @Model.SaldoActual.ToString("N2")</h1>
                    <p class="card-text opacity-75">@Model.Moneda</p>
                    <a href="@Url.Action("IngresarDinero", "Billetera")" class="btn btn-warning mt-3">
                        + Ingresar Dinero
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            @* CAMBIO:
                Cambiamos 'shadow-sm' por 'shadow' y 'bg-white'
                para que resalte sobre el fondo gris (bg-light).
            *@
            <div class="card shadow bg-white h-100 border-0" style="border-radius: 1rem;">
                <div class="card-body">
                    <h5 class="card-title border-bottom pb-2">Datos de tu Cuenta</h5>

                    <div class="row">
                        <div class="col-sm-6">
                            <p class="mb-0 fw-bold">Alias:</p>
                            <p class="text-secondary">@Model.CVU_Alias</p>
                        </div>
                        <div class="col-sm-6">
                            <p class="mb-0 fw-bold">CVU:</p>
                            <p class="text-secondary">@Model.CVU</p>
                        </div>
                    </div>

                    <h5 class="card-title border-bottom pb-2 mt-4">Acciones</h5>
                    <div class="d-grid gap-2">
                        @* CAMBIO CRÍTICO:
                            El enlace apuntaba a "Crear" en "Transferencia".
                            Lo corregimos para que apunte a la Acción "Transferir"
                            en el controlador "Billetera", que es la que creamos.
                        *@
                        <a href="@Url.Action("Transferir", "Billetera")" class="btn btn-outline-primary btn-lg">
                            Enviar Dinero 📤
                        </a>
                        <a href="@Url.Action("Listado", "Transaccion")" class="btn btn-outline-secondary">
                            Ver Actividad 📜
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>Métodos de Pago Vinculados</h4>
            @if (!Model.MetodosPago.Any())
            {
                <div class="alert alert-info">No tienes métodos de pago vinculados.</div>
            }
            @foreach (var metodo in Model.MetodosPago)
            {
                @* CAMBIO:
                    Cambiamos 'alert-secondary' por 'bg-white shadow-sm'
                    para que sea coherente con el nuevo estilo de tarjetas.
                *@
                <div class="bg-white shadow-sm p-3 rounded mb-2 d-flex justify-content-between align-items-center">
                    <span>
                        @if (metodo.TipoMetodo.Contains("Crédito"))
                        {
                            <i class="fas fa-credit-card me-2"></i> @*// Ícono de Font Awesome (si está incluido)*@
                        }
                        else
                        {
                            <i class="fas fa-wallet me-2"></i>
                        }
                        @metodo.TipoMetodo: **** **** **** @metodo.Ultimos4Digitos
                    </span>
                    <small class="text-muted">@metodo.BancoEmisor</small>
                </div>
            }
        </div>
    </div>

    @* --- Sección 2: Verificación KYC --- *@
    <div class="row mt-4">
        <div class="col-md-12">
            <h4>Estado de verificación KYC</h4>

            @* CAMBIO:
                Cambiamos 'shadow-sm' por 'shadow' y 'bg-white'
            *@
            <div class="card shadow bg-white mb-4 border-0" style="border-radius: 1rem;">
                <div class="card-body">
                    <p class="fw-bold">Estado actual:</p>
                    <span class="badge @(Model.EstadoKYC == "Verificado" ? "bg-success" : "bg-warning") p-2 mb-3">
                        @(Model.EstadoKYC == "Verificado" ? "✅ Cuenta Verificada" : "⚠️ Verificación Requerida")
                    </span>

                    @if (Model.EstadoKYC != "Verificado")
                    {
                        // SOLO MOSTRAMOS EL FORMULARIO SI NO ESTÁ VERIFICADO
                        <p>Para completar tu verificación (según RENAPER), ingresa tu CUIL:</p>

                        @* ----------------------------------------------------- *@
                        @* --- El Formulario que Llama a la Lógica Distribuida --- *@
                        @* ----------------------------------------------------- *@
                        using (Html.BeginForm("IniciarVerificacionKYC", "Billetera", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            // Campo oculto para enviar el ID del usuario al controlador
                            @Html.Hidden("id_usuario", Model.IdUsuario)

                            <div class="input-group mb-3">
                                <input type="text" name="cuil" class="form-control"
                                       placeholder="Ej: 20-30123456-7" required
                                       pattern="\d{2}-\d{8}-\d{1}"
                                       title="El formato debe ser 20-12345678-9" />

                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-search"></i> Verificar con RENAPER
                                </button>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-success">¡Tu identidad ha sido confirmada. Ya puedes usar todas las funciones de la billetera!</p>
                    }
                </div>

            </div>
        </div>
    </div>

</div>