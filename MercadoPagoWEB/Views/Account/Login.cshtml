@model MercadoPagoWEB.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLimpio.cshtml";
    ViewBag.Title = "Iniciar Sesión";
}

<!-- 1. Definimos el ancho y el color de fondo de la tarjeta -->
<div class="col-lg-4 col-md-7">
    <div class="card shadow-lg border-0 bg-dark text-white" style="border-radius: 1rem;">
        <div class="card-body p-4 p-md-5">

            <!-- Cabecera -->
            <div class="text-center mb-4">
                <i class="fas fa-wallet fa-3x text-white-50 mb-3"></i>
                <h2 class="fw-bold">Iniciar Sesión</h2>
            </div>

            <!-- Formulario -->
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Campo Email con Icono -->
                <div class="input-group mb-3">
                    <span class="input-group-text bg-secondary border-secondary">
                        <i class="fas fa-envelope text-white"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control bg-secondary text-white border-secondary", placeholder = "Correo Electrónico" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                <!-- Campo Contraseña con Icono y Toggle -->
                <div class="input-group mb-4">
                    <span class="input-group-text bg-secondary border-secondary">
                        <i class="fas fa-lock text-white"></i>
                    </span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control bg-secondary text-white border-secondary", placeholder = "Contraseña", id = "passwordInput" })
                    <span class="input-group-text bg-secondary border-secondary" id="togglePassword" style="cursor: pointer;">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                <!-- Botones -->
                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-primary btn-lg">Continuar</button>
                    @Html.ActionLink("Crear cuenta nueva", "Register", null, new { @class = "btn btn-outline-light" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Scripts de validación que ya teníamos -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Script para el toggle de contraseña -->
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordInput = document.getElementById('passwordInput');
            var toggleIcon = document.getElementById('toggleIcon');

            // Cambiar tipo de input
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });
    </script>
}